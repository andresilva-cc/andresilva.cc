{
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.stories.tsx",
          ".storybook/**/*.ts"
        ]
      }
    ],
    "react/require-default-props": "off",
    "react/jsx-props-no-spreading": [
      "error",
      {
        "exceptions": ["Link", "a"]
      }
    ]
  }
}
